{#
This is the parent template of all jobs in v9web.yml. It defines the common
setup steps required to perform each job.

This template should be used by other files by `{% extends "job.njk" %}`.
#}

  {% block name -%}
    {# The name of the job should go in this block (e.g. "tsc", "build"). #}
  {%- endblock %}:
    continue-on-error: false
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - name: node install
        uses: actions/setup-node@v3
        with:
          node-version: 16
          cache: npm
          cache-dependency-path: v9web/package-lock.json

      - run: npm clean-install

{% block steps -%}
  {#
    The steps to execute as part of this job, after the setup steps, should
    go into this block.
  #}
{%- endblock -%}
